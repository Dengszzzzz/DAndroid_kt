<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_87cfdc"
    android:transitionGroup="true">

    <include
        layout="@layout/top_view"/>

    <Button
        android:id="@+id/btn_out1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finish 退出"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btn_out2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finishAfterTransition 退出"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btn_out3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置ReturnTransition后 finishAfterTransition 退出"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"/>

</LinearLayout>